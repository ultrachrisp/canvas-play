    "license": "GPL",
    "bugs": {
        "url": "https://github.com/ultrachrisp/cavas-play/issues"
    },
    "homepage": "https://github.com/ultrachrisp/cavas-play#readme",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "chai": "^4.2.0",
        "jsdom": "15.1.1",
        "jsdom-global": "3.0.2",
        "mocha": "^6.2.0",
        "onchange": "^6.0.0"
    }
}
