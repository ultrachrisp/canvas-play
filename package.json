{
    "name": "canvas-play",
    "version": "1.0.0",
    "description": "Adventures in canvas",
    "author": "Chrisp",
    "private": false,
    "license": "GNU GENERAL PUBLIC LICENSE",
    "requires": true,
    "lockfileVersion": 1,
    "repository": {
        "type": "https",
        "url": "https://github.com/ultrachrisp/cavas-play.git"
    },
    "dependencies": {
        "animejs": "^2.2.0",
        "babel-preset-env": "^1.6.1",
        "babelify": "^8.0.0",
        "brfs-babel": "^1.0.0",
        "browser-sync": "^2.24.4",
        "browserify": "^16.2.0",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.0.0",
        "tern": "^0.21.0",
        "uglify-js": "^3.3.23"
    },
    "scripts": {
        "clean": "rm -f dist/{js/*}",
        "createfolders": "mkdir -p ./dist/js",
        "uglify": "uglifyjs ./dist/js/bundle.js -m -o ./dist/js/bundle.min.js",
        "browserify": "browserify -t [babelify --comments false] ./src/js/main.js > ./dist/js/bundle.js -t brfs-babel",
        "serve": "browser-sync start --server --files 'dist/js/*.js, **/*.html' ",
        "build:js": "npm run browserify && npm run uglify",
        "build:temp": "npm run browserify",
        "build:all": "npm run createfolders && npm run build:js",
        "watch:js": "onchange 'src/js/**/*.js' -- npm run build:temp",
        "watch:all": "npm-run-all -p serve watch:js",
        "postinstall": "npm run build:all && npm run watch:all"
    }
}
