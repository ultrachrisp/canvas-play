    },
    "dependencies": {},
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/preset-env": "^7.4.3",
        "babel-plugin-add-module-exports": "^1.0.2",
        "babel-plugin-import": "^1.12.0",
        "babelify": "^10.0.0",
        "browserify": "^16.2.3",
        "browserify-livereload": "^1.0.10",
        "mocha": "^6.2.0",
        "watchify": "^3.11.1"
