    "scripts": {
        "test": "mocha --watch",
        "watch": "watchify -p [ browserify-livereload --host 127.0.0.1 --port 1337 ] src/js/main.js -o dist/js/main.bundle.js",
        "watch:dev": "watchify -p [ browserify-livereload --host 127.0.0.1 --port 1337 ] src/dev/main.js -o dist/dev/main.bundle.js",
        "build": "browserify src/js/main.js -o dist/js/main.bundle.js"
    },
    "browserify": {
        "transform": [
            [
                "babelify",{ "stage": [0] }
            ]
        ]
